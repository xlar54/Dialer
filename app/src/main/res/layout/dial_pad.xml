<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="2"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="3"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="4"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="6"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="7"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="8"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="9"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="CLR"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundshapebtn"
            android:text="CALL"
            android:textColor="#000000"
            android:textSize="30dp" />

    </LinearLayout>
</LinearLayout>