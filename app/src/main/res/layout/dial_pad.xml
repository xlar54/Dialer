<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30dp"
            android:background="@drawable/roundshapebtn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="1"/>
        <Button
            android:id="@+id/b_2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="2"/>
        <Button
            android:id="@+id/b_3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="4"/>
        <Button
            android:id="@+id/b_5"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
             android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="5"/>
        <Button
            android:id="@+id/b_6"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_7"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="7"/>
        <Button
            android:id="@+id/b_8"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="8"/>
        <Button
            android:id="@+id/b_9"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_clear"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#FF0000"
            android:textColor="#000000"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="CLR"/>
        <Button
            android:id="@+id/b_0"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="0"/>
        <Button
            android:id="@+id/b_call"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#00FF00"
            android:textColor="#000000"
            android:background="@drawable/roundshapebtn"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="CALL"/>

    </LinearLayout>
</LinearLayout>